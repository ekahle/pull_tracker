= page_header 'Welcome to the ICRC Pull Tracker'

%table.table.table-responsive.table-bordered.table-hover#pulls-table
  %th ID
  %th Status
  %th Description
  -@pulls.each do |pull|
    %tr
      %td= pull.id
      %td= pull.status
      %td= pull.description

%p.pull-right
  %em= "Content updated #{Time.now.strftime('%d %B %Y at %I:%M %p')}"
