= page_header 'Users'

%table.table.table-responsive.table-bordered.table-hover#users-table
  %tr
    %th Name
    %th Email
    %th

  - @users.each do |user|
    %tr
      %td= link_to user.full_name, user_path(user)
      %td= mail_to user.email
      %td
        = link_to 'Edit', edit_user_path(user), class: 'btn btn-mini'
        = link_to 'Destroy', user, method: :delete, confirm: 'Are you sure you want to delete this user?', class: 'btn btn-mini btn-danger'

%br

= link_to 'New User', new_user_path, class: 'btn btn-primary'
