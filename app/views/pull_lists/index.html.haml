= page_header 'Pull lists'

%table.table.table-responsive.table-bordered.table-hover#pull_lists-table
  %tr
    %th Pull ID
    %th File
    %th

  - @pull_lists.each do |pull_list|
    %tr
      %td= link_to pull_list.pull.id, pull_path(pull_list.pull)
      %td= link_to pull_list.file, pull_list
      %td
        = link_to 'Edit', edit_pull_list_path(pull_list), class: 'btn btn-mini'
        = link_to 'Destroy', pull_list, method: :delete, confirm: 'Are you sure you want to delete this pull list?', class: 'btn btn-mini btn-danger'
%br

= link_to 'New Pull list', new_pull_list_path, class: 'btn btn-primary'
