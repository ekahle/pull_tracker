%header#site-header.site-header
  .navbar.navbar-fixed-top
    .navbar-inner
      .container-fluid
        = link_to 'Home', root_path, class: 'brand'
        - if user_signed_in?
          %button.btn.btn-navbar{'data-target' => '.nav-collapse', 'data-toggle' => 'collapse', 'type' => 'button'}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          .nav-collapse.collapse
            %ul.nav#site-nav
              %li
                = link_to 'Pulls', pulls_path
              %li
                = link_to 'Pull lists', pull_lists_path
              %li
                = link_to 'Pull manifests', pull_manifests_path
              %li
                = link_to 'Users', users_path

            %ul.pull-right.nav#user-nav
              %li.dropdown
                %a{'href' => '#', 'class' => 'dropdown-toggle', 'data-toggle' => 'dropdown'}
                  = current_user.full_name
                  %b.caret
                %ul.dropdown-menu
                  %li
                    = link_to 'Edit profile', edit_user_path(current_user)
                  %li.divider
                  %li
                    = link_to 'Sign out', destroy_user_session_path, method: 'DELETE'
